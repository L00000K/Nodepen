{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ]
}