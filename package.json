    "concurrently": "^7.1.0",
    "eslint": "^7.32.0",
    "jest": "^27.3.1",
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "tsc-alias": "^1.6.5",
