{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "$": ["./src/store"]
    },
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "resolveJsonModule": false,
    "resolvePackageJsonExports": false,
    "moduleResolution": "bundler",
    "jsx": "react"
  }
}